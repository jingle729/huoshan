<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressBar">
        <attr name="activeLineColor" format="color"/>
        <attr name="inactiveLineColor" format="color"/>
        <attr name="circleColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="circleRadius" format="dimension"/>
        <attr name="delayShowText" format="integer"/>
        <attr name="textPadding" format="dimension"/>
        <attr name="animationTime" format="integer"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textHeight" format="dimension"/>
        <attr name="progress" format="float"/>
        <attr name="closePadding" format="boolean"/>
        <attr name="closeText" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RadioTextView">
        <attr name="selected" format="boolean"/>
        <attr name="text" format="string"/>
        <attr name="color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ColorCircleView">
        <!--圆半径-->
        <attr name="circle_radius" format="dimension"/>
        <!-- 内圆外环的间距-->
        <attr name="ring_padding" format="dimension"/>
        <!-- 圆环宽度-->
        <attr name="ring_width" format="dimension"/>
        <!-- 圆环颜色 -->
        <attr name="ring_color" format="color"/>


    </declare-styleable>

    <declare-styleable name="DownloadView">
        <attr name="bar_width" format="dimension"/>
        <attr name="bar_width_padding" format="dimension"/>
        <attr name="bar_height" format="dimension"/>
        <attr name="bar_content_height" format="dimension"/>
        <attr name="unreached_bar_color" format="color"/>
        <attr name="reached_bar_color" format="color"/>
    </declare-styleable>

</resources>