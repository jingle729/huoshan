    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme -->
        <item name="android:listDivider">@drawable/divider_feature_tab</item>
    </style>
    <style name="faceInfoTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="FeatureItemTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="CustomFloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
    </style>
    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EffectArBannerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="LicenseLoading" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="PreferenceTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="iconSpaceReserved">false</item>
    </style>
</resources>
