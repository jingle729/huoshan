<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_black"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_solid_white_radius8"
        android:layout_width="270dp"
        android:layout_height="205dp">
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="@string/title_please_input_key_and_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="14dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:text="@string/title_cannot_be_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_key"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            android:paddingLeft="12dp"
            android:background="@drawable/bg_solid_f2f3f5"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="KEY"
            android:textColorHint="@color/transparent_black"/>

        <EditText
            android:id="@+id/et_secret"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="1dp"
            android:paddingLeft="12dp"
            android:background="@drawable/bg_solid_f2f3f5"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="SECRET"
            android:textColorHint="@color/transparent_black"/>

        <TextView
            android:background="@color/colorGrey"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


        <TextView
            android:id="@+id/tv_confirm"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>