<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ebox_record_root_performance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ebox_record_perf_bg"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/ebox_perf_fps_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS: "
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,SpUsage" />


        <TextView
            android:id="@+id/ebox_perf_fps_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/ebox_perf_fps_name"
            app:layout_constraintStart_toEndOf="@id/ebox_perf_fps_name"
            app:layout_constraintTop_toTopOf="@id/ebox_perf_fps_name"
            tools:ignore="HardcodedText,SpUsage" />


        <TextView
            android:id="@+id/ebox_perf_rending_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/render_cost"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ebox_perf_fps_name"
            tools:ignore="HardcodedText,SpUsage" />


        <TextView
            android:id="@+id/ebox_perf_rending_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/ebox_perf_rending_name"
            app:layout_constraintStart_toEndOf="@id/ebox_perf_rending_name"
            app:layout_constraintTop_toTopOf="@id/ebox_perf_rending_name"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/ebox_perf_resolution_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/input_resolution"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ebox_perf_rending_name"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/ebox_perf_resolution_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/ebox_perf_resolution_name"
            app:layout_constraintStart_toEndOf="@id/ebox_perf_resolution_name"
            app:layout_constraintTop_toTopOf="@id/ebox_perf_resolution_name"
            tools:ignore="HardcodedText,SpUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>