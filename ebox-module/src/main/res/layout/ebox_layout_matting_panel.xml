<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <!--包一层FrameLayout 实现颜色叠加效果-->
        <FrameLayout
            android:id="@+id/ebox_matting_panel_name_container"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/eo_base_panel_common_bg"
            app:layout_constraintBottom_toTopOf="@id/ebox_matting_bottom_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/ebox_matting_panel_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/eo_base_filter_panel_top_corners_bg"
                android:gravity="center"
                android:text="@string/feature_matting_sticker"
                android:textColor="@color/TextPrimary"
                android:textSize="14dp"
                tools:ignore="SpUsage" />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ebox_matting_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/BGPrimary2"
            android:minHeight="148dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <LinearLayout
                android:id="@+id/ebox_matting_close"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ebox_matting_close_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_none"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/ebox_matting_close_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/face_cluster_clean"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp"
                    tools:ignore="SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ebox_matting_upload"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_upload_photo"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/face_cluster_upload"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp"
                    tools:ignore="SpUsage" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.volcengine.effectone.widget.EOLoadingView
            android:id="@+id/ebox_matting_loading_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/BGPrimary2"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ebox_matting_panel_name_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>