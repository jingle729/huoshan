<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/viewroot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/fl_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:visibility="invisible">

        <TextView
            android:id="@+id/load_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/wait_tip"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_image_quality"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_board_total"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/fl_lens_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>

    <ImageView
        android:id="@+id/img_comoare_len"
        android:src="@drawable/img_comoare_len"
        android:visibility="invisible"
        android:layout_width="5dp"
        android:layout_height="fill_parent"/>

    <ImageView
        android:id="@+id/img_compare"
        android:src="@drawable/ic_lens_contrast_off"
        android:layout_alignParentRight="true"
        android:layout_above="@id/fl_image_quality"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="66dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:visibility="invisible"/>

    <com.effectsar.labcv.effect.view.ProgressBar
        android:id="@+id/pb1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_marginBottom="28dp"
        android:layout_above="@id/fl_image_quality"
        android:visibility="invisible"
        app:closeText="true"
        app:closePadding="true"
        app:activeLineColor="@color/colorWhite"
        app:circleRadius="10dp"
        app:inactiveLineColor="@color/inactivie_progress_bg"
        app:lineHeight="2dp"
        app:textHeight="20dp"
        app:textSize="12dp" />

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:indeterminate="true"
        android:id="@+id/progress_circular"
        app:cpb_color="@color/black_trans_15"
        app:cpb_min_sweep_angle="0"
        app:cpb_max_sweep_angle="180"
        app:cpb_stroke_width="4dp"
        app:cpb_rotation_speed="2.0"
        app:cpb_sweep_speed="2.0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_above="@id/fl_image_quality"
        android:layout_marginBottom="50dp"
        android:id="@+id/rl_progress_vfi"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        >

        <com.effectsar.labcv.common.view.MarqueeTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="5dp"
            android:text="0.1x"
            android:textSize="12sp"
            android:gravity="center"
            />

        <com.effectsar.labcv.lens.view.StepProgressBar
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/progress_vfi"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:layout_height="match_parent"
            app:activeLineColor="@color/colorWhite"
            app:circleRadius="10dp"
            app:inactiveLineColor="@color/inactivie_progress_bg"
            app:lineHeight="2dp"
            app:textHeight="20dp"
            app:textSize="12dp"
            app:progressStep="0.1"
            app:minProgressValue ="0.1"
            android:visibility="invisible"
            />

        <com.effectsar.labcv.common.view.MarqueeTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:text="1x"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>



    <ImageView
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:id="@+id/iv_vfi_play"
        android:src="@drawable/ic_vfi_play"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

</RelativeLayout>
